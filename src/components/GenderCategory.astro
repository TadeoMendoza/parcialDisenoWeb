---
import Image from "astro/components/Image.astro";
import mans from '../../public/img/mans.jpg';
import woman from '../../public/img/woman.jpg';

---
<section class="flex flex-col md:flex-row h-screen gap-5">
    <div class="h-3/6 md:h-full w-full md:w-3/6 border border-1">
        <div class="relative">
            <Image src={mans} alt="Hero" class="object-cover h-full w-full" />
            <div class="absolute top-0 right-0 left-0 flex justify-center p-5">
                <div class="px-2 py-1 rounded-lg bg-[#191919]/25 backdrop-blur-3xl text-[#F9FEFF] self-center">
                    <p>Hombres</p>
                </div>
            </div>
        </div>
    </div>
    <div class="h-3/6 md:h-full w-full md:w-3/6 border border-1">
        <div class="relative">
            <Image src={woman} alt="Hero" class="object-cover h-full w-full" />
            <div class="absolute top-0 right-0 left-0 flex justify-center p-5">
                <div class="px-2 py-1 rounded-lg bg-[#191919]/25 backdrop-blur-3xl text-[#F9FEFF] self-center">
                    <p>Mujeres</p>
                </div>
            </div>
        </div>
    </div>
</section>