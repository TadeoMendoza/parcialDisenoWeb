---
import Layout from '../../layouts/Layout.astro';
import imageLogin from '../../../public/img/login.jpg'
import Image from 'astro/components/Image.astro';
---

<Layout title="Iniciar sesion">
	<section class="max-w-7xl mx-auto py-28 px-10 lg:px-0 flex flex-col gap-6">
		<section class="flex flex-col md:flex-row md:max-h-[600px] border-2 border-[#191919]">
				<div class="hidden md:flex md:w-3/6">
					<Image src={imageLogin} alt="Imagen de inicio de sesion" class="h-full object-cover"  />
				</div>
				<div class="md:w-3/6 p-5 items-center flex flex-1">
					<form action="success" class="flex flex-1 flex-col gap-5" >
						<h1 class="font-bold uppercase text-center text-3xl md:text-4xl lg:text-5xl">Iniciar sesion</h1>
						<div class="flex flex-col gap-4">
							<label class="font-semibold" for="email">Correo electronico</label>
							<input type="email" name="email" id="email" class="p-3 border border-gray-300 rounded-md" placeholder="ej: correo@correo.com" />
						</div>
						<div class="flex flex-col gap-4">
							<label class="font-semibold" for="password">Contraseña</label>
							<input type="password" name="password" id="password" class="p-3 border border-gray-300 rounded-md" placeholder="ej: 123457" />
						</div>
						<div class="flex justify-center">
							<button type="submit" class="flex gap-2 border hover:border-[#191919] text-[#F9FEFF] hover:bg-[#F9FEFF] bg-[#191919] hover:text-[#191919] duration-300 hover:px-6 px-10 py-3">Iniciar sesión 
								<svg  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="1"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-login"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2" /><path d="M21 12h-13l3 -3" /><path d="M11 15l-3 -3" /></svg>
							</button>
						</div>
					</form>
				</div>
		</section>
	</section>
</Layout>
